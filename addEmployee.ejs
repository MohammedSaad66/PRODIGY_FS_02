<h2>Add Employee</h2>
<form method="POST" action="/employees/add">
  <input name="name" placeholder="Name" required /><br />
  <input name="email" type="email" placeholder="Email" required /><br />
  <input name="position" placeholder="Position" required /><br />
  <input name="department" placeholder="Department" required /><br />
  <input name="salary" type="number" placeholder="Salary" step="0.01" required /><br />
  <button type="submit">Add Employee</button>
</form>
